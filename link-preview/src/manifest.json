{
  "name": "Link Preview",
  "version": "1.1.2",
  "description": "Preview link metadata (title and description) on hover",
  "homepage_url": "https://github.com/jiacai2050/my-works/tree/main/link-preview",
  "author": "dev@liujiacai.net",
  "icons": {
    "128": "logo.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_ui": {
    "page": "option.html",
    "open_in_tab": true
  },
  "permissions": ["storage"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["microtip.min.css"],
      "js": ["common.js", "content.js"]
    }
  ],
  "manifest_version": 3
}
